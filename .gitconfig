[user]
	name = Your Name
	email = your.email@example.com

[core]
	editor = vim
	autocrlf = input

[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = log --oneline --graph --decorate --all

[color]
	ui = auto

[push]
	default = simple

[pull]
	rebase = false
